<%- include('../admin/header.ejs') %>


    <!-- Form Start -->
    <div class="container-fluid pt-4 px-4">
        <div class="row g-4">





            <!-- Table start -->


            <div class="container-fluid py-4 ">
                <div class="row">
                    <div class="col-12">
                        <div class="card my-4 bg-secondary">
                            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                                <div
                                    class="bg-success rounded shadow-primary border-radius-lg pt-4 pb-3 d-flex justify-content-between">
                                    <h3 class="text-white text-capitalize ps-3">Edit Product</h3>

                                </div>
                            </div>
                            <div class="card-body px-0 pb-2">
                                <div class="table-responsive p-0">

                                    <!-- Copeid Code Start -->



                                    <form class="p-4 border border-2 border-black" action="/admin/editProduct"
                                        method="post" enctype="multipart/form-data">
                                        <div class="row input-group input-group-outline mb-3">

                                            <input type="hidden" name="id" id="" value="<%= pdtData._id %>">
                                            <div class="form-group col-md-4">
                                                <label for="brand">Brand</label>
                                                <input type="brand" class="form-control" name="brand" id="brand"
                                                    value="<%= pdtData.brand %>" placeholder="Brand">
                                                <small id="brandErr" class="error"></small>
                                            </div>
                                            <div class="form-group col-md-8">
                                                <label for="name">Product Name</label>
                                                <input type="name" class="form-control" name="productName" id="name"
                                                    value="<%= pdtData.name %>" placeholder="Product name">
                                                <small id="nameErr" class="error"></small>
                                            </div>

                                        </div>

                                        <div class="row input-group input-group-outline mb-3">

                                            <div class="form-group col-md-8">
                                                <label for="inputAddress">Description</label>
                                                <textarea type="text" rows="4" class="form-control" name="description"
                                                    id="description"
                                                    placeholder="Enter Product Description"> <%= pdtData.description %>" </textarea>
                                                <small id="descriptionErr" class="error"></small>
                                            </div>
                                            <div class="col-md-4">

                                                <div class="form-group">


                                                    <label for="category">Category</label>

                                                    <select id="category" class="form-control" name="category">
                                                        <option value="<%=pdtData.category.name %>">
                                                            <%=pdtData.category.name %>
                                                        </option>
                                                        <% if(catData.length>0){for(let i=0;i<catData.length;i++) {
                                                                if(catData[i].name !=pdtData.category.name){%>
                                                                <option value="<%=catData[i].name %>">
                                                                    <%=catData[i].name %>
                                                                </option>
                                                                <% }} }%>
                                                    </select>

                                                </div>



                                            </div>
                                        </div>
                                        <div class="row input-group input-group-outline mb-3">
                                            <div class="form-group col-md-4">
                                                <label for="quantity">Quantity</label>
                                                <input type="Number" name="quantity" class="form-control" id="quantity"
                                                    value="<%= pdtData.quantity %>" placeholder="Quantity">
                                                <small id="quantityErr" class="error"></small>
                                            </div>

                                            <div class="col-md-4">
                                                <label for="price">Price</label>
                                                <input type="number" name="price" id="price" class="form-control"
                                                    value="<%= pdtData.price %>" placeholder="price">
                                                <small id="priceErr" class="error"></small>
                                            </div>

                                            <div class="col-md-4">
                                                <label for="dprice">Discount Price</label>
                                                <input type="number" name="dprice" id="dprice" class="form-control"
                                                    value="<%= pdtData.discountPrice %>" placeholder="Discount price">
                                                <small id="dpriceErr" class="error"></small>
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <label>Edit product images</label>
                                        </div>

                                        <div class="d-flex r column-gap-3">
                                            <% for(let i=0; i<pdtData.images.length; i++){ %>
                                                <div>
                                                    <img style="width: 5rem;" src="/multerImg/<%= pdtData.images[i] %>"
                                                        alt="Image 1">
                                                    <a href="/admin/imageDelete/<%= pdtData._id %>?imageURL=<%= pdtData.images[i] %>"
                                                        class="btn btn-danger">Delete</a>
                                                </div>

                                                <% } for(let i=pdtData.images.length; i<1; i++){ %>

                                                    <div class="mb-3">

                                                        <input class="form-control bg-dark" type="file" id="image"
                                                            name="image" multiple>
                                                        <small id="imageErr" class="error"></small>
                                                    </div>



                                                    <% } %>
                                        </div>

                                        <br>
                                        <div class="d-flex justify-content-end">
                                            <button type="submit" class="btn btn-primary"
                                                onclick="return validateProduct()">Update Details</button>
                                        </div>
                                    </form>



                                    <!-- Copeid Code End -->

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>













            <!-- Table end -->
        </div>
    </div>
    <!-- Form End -->


    <%- include('../admin/footer.ejs') %>