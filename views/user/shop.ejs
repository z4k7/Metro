<%- include('../user/header.ejs') %>

    <!-- Breadcrumb Start -->
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-12">
                <nav class="breadcrumb bg-dark mb-30 rounded">
                    <a class="breadcrumb-item text-primary" href="/">Home</a>
                    <a class="breadcrumb-item text-primary" href="#">Shop</a>

                </nav>
            </div>
        </div>
    </div>
    <!-- Breadcrumb End -->


    <!-- Shop Start -->
    <div class="container-fluid">
        <div class="row px-xl-5">
            <!-- Shop Sidebar Start -->
            <div class="col-lg-3 col-md-4">


                <!-- Filter Start -->
                <!-- Price Start -->

                <div class="bg-dark text-primary p-4 mb-30 rounded">
                    <h5 class="section-title position-relative text-uppercase mb-3"><span class="text-white pr-3">Filter
                            by price</span></h5>

                    <form>

                        <div
                            class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                            <label class="" for="price-1">UPTO ₹10000</label>
                            <input type="checkbox" <% if(price.includes('10000')){%> checked <%} %> class=""
                                name="price" value="10000" id="price-1">
                                <span class="badge border font-weight-normal"></span>
                        </div>
                        <div
                            class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                            <label class="" for="price-2">₹10000 - ₹15000</label>
                            <input type="checkbox" <% if(price.includes('15000')){%> checked <%} %> class=""
                                name="price" value="15000" id="price-2">
                                <span class="badge border font-weight-normal"></span>
                        </div>
                        <div
                            class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                            <label class="" for="price-3">₹15000 - ₹20000</label>
                            <input type="checkbox" <% if(price.includes('20000')){%> checked <%} %> class=""
                                id="price-3" name="price" value="20000">
                                <span class="badge border font-weight-normal"></span>
                        </div>
                        <div
                            class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                            <label class="" for="price-4">₹20000 - ₹25000</label>
                            <input type="checkbox" <% if(price.includes('25000')){%> checked <%} %> class=""
                                id="price-4" name="price" value="25000">
                                <span class="badge border font-weight-normal"></span>
                        </div>
                        <div
                            class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-5">
                            <label class="" for="price-5">MORE THAN ₹25000</label>
                            <input type="checkbox" <% if(price.includes('25001')){%> checked <%} %> id="price-5"
                                name="price" value="25001">
                                <span class="badge border font-weight-normal"></span>
                        </div>

                        <!-- Price End -->

                        <!-- Category Start -->

                        <h5 class="section-title position-relative text-uppercase mb-3"><span
                                class="text-white pr-3">Filter
                                by Category</span></h5>

                        <% categoryToArray.forEach((x)=>{ %>

                            <div
                                class="custom-control custom-checkbox d-flex align-items-center justify-content-between mb-3">
                                <label class="">
                                    <%= x %>
                                </label>
                                <input type="checkbox" <% if(categoryToFront.includes(x)){%>checked<%} %>
                                    name="category" value="<%= x %>" class="mb-2">
                                        <span class="badge border font-weight-normal"></span>
                            </div>


                            <% }) %>

                                <input class="btn btn-primary  rounded" type="submit" value="Apply Filter">

                                <!-- Category End -->
                                <!-- Filter End -->

                    </form>
                </div>

                <div class=" text-primary p-4 mb-30 rounded">

                </div>

            </div>
            <!-- Shop Sidebar End -->


            <!-- Shop Product Start -->
            <div class="col-lg-9 col-md-8">
                <div class="row pb-3">
                    <div class="col-12 pb-1">
                        <div class="d-flex align-items-center justify-content-between mb-4">
                            <div>
                                <!-- <button class="btn btn-sm btn-light"><i class="fa fa-th-large"></i></button> -->
                                <!-- <button class="btn btn-sm btn-light ml-2"><i class="fa fa-bars"></i></button> -->
                            </div>
                            <div class="ml-2">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-sm btn-primary rounded dropdown-toggle"
                                        data-toggle="dropdown">Sorting <% if(sortToFront==1){%> Price : Low to High
                                            <%}else if(sortToFront==-1){%> Price: High to Low<%}else{%>Latest<%} %>
                                                        </button>
                                    <div class="dropdown-menu bg-primary rounded dropdown-menu-right">
                                        <a class="dropdown-item" href="#">Latest</a>
                                        <a class="dropdown-item page-item" data-do-sort="1" href="#">Price Low to
                                            High</a>
                                        <a class="dropdown-item page-item" data-do-sort="-1" href="#">Price High to
                                            Low</a>
                                    </div>
                                </div>
                                <!-- <div class="btn-group ml-2">
                                    <button type="button" class="btn btn-sm btn-light dropdown-toggle"
                                        data-toggle="dropdown">Showing</button>
                                    <div class="dropdown-menu dropdown-menu-right">
                                        <a class="dropdown-item" href="#">10</a>
                                        <a class="dropdown-item" href="#">20</a>
                                        <a class="dropdown-item" href="#">30</a>
                                    </div>
                                </div> -->
                            </div>
                        </div>
                    </div>

                    <!-- For Loop Start -->

                    <% for(let i=0; i<pdtsData.length; i++){ %>

                        <div class="col-lg-4 col-md-6 col-sm-6 pb-1">
                            <div class="product-item bg-dark mb-4 rounded">
                                <div class="product-img position-relative overflow-hidden">
                                    <div>
                                        <div>
                                            <img class="img-fluid bg-light w-100 rounded"
                                                src="/multerImg/<%= pdtsData[i].images[0] %>" alt="">
                                            <!-- Offer Start -->
                                        </div>
                                        <div style="position: absolute; z-index: 1; top: 0;">
                                            <% if(pdtsData[i].offer && pdtsData[i].offer.status=='Available' ){ %>
                                                <span class="label rounded text-white bg-info"
                                                    style="padding: 3px 3px 3px 3px;">
                                                    <%=pdtsData[i].offer.name %>
                                                </span>

                                                <% }%>

                                        </div>
                                    </div>
                                    <!-- Offer End -->

                                    <div class="product-action">
                                        <a class="btn btn-outline-dark btn-square"
                                            href="/shop/addToCart/<%= pdtsData[i]._id %>"><i
                                                class="fa fa-shopping-cart"></i></a>
                                        <a class="btn btn-outline-dark btn-square"
                                            href="/addToWishlist?id=<%= pdtsData[i]._id %>"><i
                                                class="far fa-heart"></i></a>

                                        <a class="btn btn-outline-dark btn-square"
                                            href="/multerImg/<%= pdtsData[i].images[0] %>"><i
                                                class="fa fa-search"></i></a>
                                    </div>
                                </div>
                                <div class="text-center py-4">
                                    <a class="h6 text-decoration-none text-primary text-truncate"
                                        href="/detail/<%= pdtsData[i]._id %>">
                                        <%= pdtsData[i].name %>
                                    </a>

                                    <% let currPrice; if(pdtsData[i].offer && pdtsData[i].offer.status=='Available' ){
                                        currPrice=pdtsData[i].offerPrice }else{ currPrice=pdtsData[i].discountPrice }
                                        let discountPercentage=Math.floor(100 - ( (currPrice*100) / pdtsData[i].price
                                        )); %>


                                        <div class="d-flex align-items-center  justify-content-center mt-2">
                                            <h5 class="text-primary">₹<%= currPrice %>
                                            </h5>
                                            <h6 class="text-muted  ml-2"><del>₹<%= pdtsData[i].price %> </del></h6>
                                            <strong class=" d-flex align-items-center  justify-content-center ml-3 "
                                                style="color: green;">
                                                <%= discountPercentage %>% off
                                            </strong>
                                        </div>
                                        <!-- <div class="d-flex align-items-center justify-content-center mb-1">
                                            <small class="fa fa-star text-primary mr-1"></small>
                                            <small class="fa fa-star text-primary mr-1"></small>
                                            <small class="fa fa-star text-primary mr-1"></small>
                                            <small class="fa fa-star text-primary mr-1"></small>
                                            <small class="fa fa-star text-primary mr-1"></small>
                                            <small>
                                                <%= pdtsData[i].quantity %>
                                            </small>
                                        </div> -->
                                </div>
                            </div>
                        </div>
                        <% } %>

                            <!-- For Loop End -->

                            <div class="col-12">
                                <nav>
                                    <ul class="pagination justify-content-center">
                                        <li class="page-item" <% if(page==1){%> hidden<%} %> data-page-no="<%=page-1
                                                    %>"><a class="page-link rounded bg-dark"
                                                        href="#">Previous</span></a>
                                        </li>
                                        <!-- <li class="page-item "><a class="page-link rounded bg-dark" href="?page=1">1</a></li>
                                        <li class="page-item "><a class="page-link rounded bg-dark" href="?page=2">2</a></li>
                                        <li class="page-item"><a class="page-link rounded bg-dark" href="?page=3">3</a></li> -->
                                        <% for(let i=1;i<=totalPages;i++) {%>

                                            <li class="page-item" data-page-no="<%=i  %>"><a
                                                    class="page-link rounded bg-dark" href="#">
                                                    <%=i %>
                                                </a></li>

                                            <%} %>

                                                <li class="page-item" <% if(page==totalPages){%> hidden<%} %>
                                                        data-page-no="<%=+page+1 %>"><a
                                                                class="page-link rounded bg-dark" href="#">Next</a></li>
                                    </ul>
                                </nav>
                            </div>
                </div>
            </div>
            <!-- Shop Product End -->
        </div>
    </div>
    <!-- Shop End -->



    <%- include('../user/footer.ejs') %>